package exp8;
import java.util.Scanner;

class One{
void one1()
{   System.out.println("Enetr a string");
    Scanner s=new Scanner(System.in);//for taking input from user
    String st=s.nextLine();
    System.out.println("enter the letter to be searched");// if letter is not found in the string, -1 is returned
    String i=s.nextLine();
    int a=st.indexOf(i);//to check the first occurence of letter
    int b=st.lastIndexOf(i);//to check the last occurence of letter
    System.out.println("First occurrence of "+i+" is: "+a);
    System.out.println("Last occurrence of "+i+" is: "+b);
}
}
public class Exp8 {
    public static void main(String[] args) {
       
       One o=new One();
        o.one1();
    }
    
}

